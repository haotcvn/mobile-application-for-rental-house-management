<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HomeManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Primary brand color-->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender_second</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color-->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_second</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- StatusBar Color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="colorAccent">?attr/colorPrimaryVariant</item>

        <!--color of thumb when inactive-->
        <item name="colorSwitchThumbNormal">@color/sienna</item>


        <item name="android:textSize">16sp</item>

    </style>

    <style name="Theme.HomeManager" parent="Base.Theme.HomeManager" />

    <!-- Custom Splash Screen-->
    <style name="Custom.Splash.Screen" parent="Base.Theme.HomeManager">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Custom Indicator-->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryVariant</item>
    </style>
</resources>